<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/half_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginStart="@dimen/half_margin"
            android:text="@string/widget_data_title"
            android:textColor="@color/black"
            android:textSize="@dimen/subheading_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/dataContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/half_margin">

            <TextView
                android:id="@+id/wgtPerfNdx0"
                style="@style/wgt_bar"
                android:background="@drawable/green_rect" />

            <TextView
                android:id="@+id/wgtPerfNdx1"
                style="@style/wgt_bar"
                android:background="@drawable/blue_rect" />

            <TextView
                android:id="@+id/wgtPerfNdx2"
                style="@style/wgt_bar"
                android:background="@drawable/amber_rect" />

            <TextView
                android:id="@+id/wgtPerfNdx3"
                style="@style/wgt_bar"
                android:background="@drawable/orange_rect" />

            <TextView
                android:id="@+id/wgtPerfNdx4"
                style="@style/wgt_bar"
                android:background="@drawable/red_rect" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
