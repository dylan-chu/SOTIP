<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invmtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/short_gap"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/short_gap"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/short_gap"
        android:textSize="@dimen/subheading_text_size"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp">

        <ImageView
            android:id="@+id/costColour"
            android:layout_width="@dimen/var_circle_size"
            android:layout_height="@dimen/var_circle_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin" />

        <ImageView
            android:id="@+id/schColour"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/short_gap"
            android:layout_marginStart="@dimen/short_gap"
            android:layout_toEndOf="@id/costColour"
            android:layout_toRightOf="@id/costColour" />

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/short_gap"
            android:layout_marginLeft="@dimen/short_gap"
            android:layout_marginRight="@dimen/short_gap"
            android:layout_marginStart="@dimen/short_gap"
            android:layout_toEndOf="@id/schColour"
            android:layout_toRightOf="@id/schColour"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>
